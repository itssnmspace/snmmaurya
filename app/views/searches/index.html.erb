<form action="/searches" method="get">
  Search: <input type="text" name="query">
  <input type="submit" name="submit" value="Search">
</form>
<hr>

<h2>Searche Lists</h2>
<% if @searches.present? %>
  <% @searches.each do |search| %>

    <h3><%= search.title %></h3>
    <p><%= search.description %></p>
    <hr>
  <% end %>
<% end %>