<% if defined?(data) %>
  <% meta_options = setup_meta_data(( data.meta_title.present? ? ({data: data}) : nil)) %>
<% elsif defined?(custom_data) %>
  <% meta_options = setup_meta_data(( custom_data.meta_title.present? ? ({custom_data: custom_data}) : nil)) %>
<% else %>
  <% meta_options = setup_meta_data(nil) %>
<% end %>
<% meta title: meta_options[:title], description: meta_options[:description], keywords: meta_options[:keywords] %>
<!-- Sharing image on social like facebook and twitter -->
<% if defined?(image) %>
  <!-- Facebook -->
  <% meta og: { image: image.sub("https", "http") } %>
  <% meta og: { image: {secure_url: image} } %>
  <% meta og: { image: {width: "255"} } %>
  <% meta og: { image: {height: "255"} } %>

  <!-- Twitter -->
  <% meta twitter: { image: image } %>
<% end %>